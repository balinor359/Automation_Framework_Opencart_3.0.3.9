<footer>
  <div class="container">
    <div class="row">
      {% if informations %}
      <div class="col-sm-4">
        <h5>{{ text_information }}</h5>
        <ul class="list-unstyled">
         {% for information in informations %}
          <li qa="footer-info-page-link"><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}
          <li><a qa="footer-contact" href="{{ contact }}">{{ text_contact }}</a></li>
        </ul>
      </div>
      {% endif %}
      
      {#  <div class="col-sm-3"> #}
       {#   <h5>{{ text_service }}</h5> #}
       {#   <ul class="list-unstyled"> #}
          {#  <li><a href="{{ contact }}">{{ text_contact }}</a></li> #}
         {#  <li><a href="{{ return }}">{{ text_return }}</a></li> #}
         {#  <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li> #}
       {#   </ul> #}
      {#  </div> #}

      <div class="col-sm-4">
        <h5>{{ text_extra }}</h5>
        <ul class="list-unstyled">
          <li><a qa="footer-manufacturer" href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
          {#<li><a qa="footer-voucher" href="{{ voucher }}">{{ text_voucher }}</a></li> #}
          {# <li><a href="{{ affiliate }}">{{ text_affiliate }}</a></li> #}
          <li><a qa="footer-special" href="{{ special }}">{{ text_special }}</a></li>
        </ul>
      </div>
      <div class="col-sm-4">
        <h5>{{ text_account }}</h5>
        <ul class="list-unstyled">
          <li><a qa="footer-account" href="{{ account }}">{{ text_account }}</a></li>
          <li><a qa="footer-order" href="{{ order }}">{{ text_order }}</a></li>
          <li><a qa="footer-wishlist" href="{{ wishlist }}">{{ text_wishlist }}</a></li>
          <li><a qa="footer-newsletter" href="{{ newsletter }}">{{ text_newsletter }}</a></li>
        </ul>
      </div>
    </div>
    <hr>
    <p class="footer-custom left">{{ powered }}</p>
    <p class="footer-custom right">{{ text_powered2 }}</p>
  </div>
</footer>
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
